<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
    <definition name="baseLayout"
                template="/WEB-INF/layouts/base.jsp">
        <put-attribute name="title" value=""/>
        <put-attribute name="navbar"
                       value="/WEB-INF/layouts/navbar.jsp"/>
        <put-attribute name="sidebar"
                       value="/WEB-INF/layouts/sidebar.jsp"/>
        <put-attribute name="main" value=""/>
        <put-attribute name="footer"
                       value="/WEB-INF/layouts/footer.jsp"/>
    </definition>
    <definition name="mainOnlyLayout"
                template="/WEB-INF/layouts/main_only.jsp">
        <put-attribute name="title" value=""/>
        <put-attribute name="main" value=""/>
    </definition>

    <definition name="index" extends="baseLayout">
        <put-attribute name="title" value="Dashboard"/>
        <put-attribute name="main"
                       value="/WEB-INF/pages/index.jsp"/>
    </definition>

    <definition name="login" extends="mainOnlyLayout">
        <put-attribute name="title" value="Login"/>
        <put-attribute name="main"
                       value="/WEB-INF/pages/login.jsp"/>
    </definition>

    <definition name="device-categories" extends="baseLayout">
        <put-attribute name="title" value="Device categories"/>
        <put-attribute name="main"
                       value="/WEB-INF/pages/device-categories/device-categories.jsp"/>
    </definition>

    <definition name="device-category" extends="baseLayout">
        <put-attribute name="title" value="Device category"/>
        <put-attribute name="main"
                       value="/WEB-INF/pages/device-categories/device-category.jsp"/>
    </definition>

    <definition name="device-category-create" extends="baseLayout">
        <put-attribute name="title" value="Create device category"/>
        <put-attribute name="main"
                       value="/WEB-INF/pages/device-categories/device-category-create-update.jsp"/>
    </definition>

    <definition name="device-category-update" extends="baseLayout">
        <put-attribute name="title" value="Update device category"/>
        <put-attribute name="main"
                       value="/WEB-INF/pages/device-categories/device-category-create-update.jsp"/>
    </definition>

    <definition name="device" extends="baseLayout">
        <put-attribute name="title" value="Device"/>
        <put-attribute name="main"
                       value="/WEB-INF/pages/device.jsp"/>
    </definition>
</tiles-definitions>